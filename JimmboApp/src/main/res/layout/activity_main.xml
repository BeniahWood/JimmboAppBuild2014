<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="at.infound.jimmboappbuild1.jimmboapp.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logSignImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:src="@drawable/jimmbologox2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailLoginText"
        android:layout_below="@+id/logSignImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/logSignImage"
        android:layout_alignEnd="@+id/logoSignIn"
        android:hint="E-Mail Adresse"
        android:visibility="visible"
        android:typeface="normal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordLoginText"
        android:layout_below="@+id/emailLoginText"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/emailLoginText"
        android:layout_alignEnd="@+id/emailLoginText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Passwort"
        android:password="true"
        android:typeface="normal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Anmelden"
        android:id="@+id/anmeldung"
        android:enabled="false"
        android:clickable="false"
        android:capitalize="words"
        android:shadowColor="#25905f"
        android:textColor="#ffffff"
        android:background="#25905f"
        android:layout_below="@+id/passwordLoginText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ich habe noch keinen Account"
        android:id="@+id/lostAccount"
        android:textSize="14dp"
        android:textColor="#848484"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/anmeldung"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Passwort vergessen"
        android:id="@+id/lostPsw"
        android:textSize="14dp"
        android:textColor="#848484"
        android:layout_below="@+id/lostAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />
</RelativeLayout>
